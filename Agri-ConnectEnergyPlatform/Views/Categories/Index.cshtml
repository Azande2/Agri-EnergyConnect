@model List<string>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Categories";
}

<h2 class="mb-4">Our Categories</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var category in Model)
    {
        <div class="col">
            <div class="card text-white text-center h-100" style="background-color: #f0f0f0; border: none;">
                <div class="card-body">
                    <img src="~/images/@category.ToLower().Replace(" ", "-")-icon.png" alt="@category" style="height: 80px;">
                    <h5 class="mt-3 text-dark">@category</h5>
                </div>
            </div>
        </div>
    }
</div>